
@{
    ViewBag.Title = "ProductDetail";
    product sanpham = ViewBag.SanPham;
}
@using WebBanHang.EF;


@ViewBag.SanPham.product_name

    <div class="container-fliud">
        <form name="frmsanphamchitiet" id="frmsanphamchitiet" method="post" action="#">
            <input type="hidden" name="sp_ma" id="sp_ma" value="1">
            <input type="hidden" name="sp_ten" id="sp_ten" value="@sanpham.product_name">
            <input type="hidden" name="sp_gia" id="sp_gia" value="@sanpham.list_price">
            <input type="hidden" name="hinhdaidien" id="hinhdaidien" value="samsung-s3.webp">

            <div class="wrapper row">
                <div class="preview col-md-6">
                    <div class="preview-pic tab-content">
                        <div class="tab-pane active" id="pic-1">
                            @if (String.IsNullOrEmpty(sanpham.image))
                            {
                                <img class="bd-placeholder-img card-img-top" width="100%" height="350" src="~/Content/Images/no-photo.png" />
                            }

                            else
                            {
                                <img class="bd-placeholder-img card-img-top" width="100%" height="350" src="~/UploadedFiles/ProductImages/@sanpham.image" />
                            }
                        </div>
                    </div>
                    <ul class="preview-thumbnail nav nav-tabs">
                        <li class="active">
                            <a data-target="#pic-1" data-toggle="tab">
                                @if (String.IsNullOrEmpty(sanpham.image))
                                {
                                    <img class="bd-placeholder-img card-img-top" width="100%" height="350" src="~/Content/Images/no-photo.png" />
                                }

                                else
                                {
                                    <img class="bd-placeholder-img card-img-top" width="100%" height="350" src="~/UploadedFiles/ProductImages/@sanpham.image" />
                                }
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="details col-md-6">
                    <h3 class="product-title">@sanpham.product_name</h3>
                    <div class="rating">
                        <div class="stars">
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star"></span>
                            <span class="fa fa-star"></span>
                        </div>
                        <span class="review-no">999 reviews</span>
                    </div>
                    <p class="product-description">@sanpham.description</p>
                    <small class="text-muted">Giá cũ: <s><span>@sanpham.list_price vnđ</span></s></small>
                    <h4 class="price">Giá hiện tại: <span>@sanpham.list_price</span></h4>
                    <p class="vote">
                        <strong>100%</strong> hàng <strong>Chất lượng</strong>, đảm bảo <strong>
                            Uy
                            tín
                        </strong>!
                    </p>
                    <h5 class="sizes">
                        sizes:
                        <span class="size" data-toggle="tooltip" title="cỡ Nhỏ">s</span>
                        <span class="size" data-toggle="tooltip" title="cỡ Trung bình">m</span>
                        <span class="size" data-toggle="tooltip" title="cỡ Lớn">l</span>
                        <span class="size" data-toggle="tooltip" title="cỡ Đại">xl</span>
                    </h5>
                    <h5 class="colors">
                        colors:
                        <span class="color orange not-available" data-toggle="tooltip" title="Hết hàng"></span>
                        <i class="fa fa-adjust" aria-hidden="true"></i>
                        <span class="color green"></span>
                        <span class="color blue"></span>
                    </h5>
                    <div class="form-group">
                        <label for="soluong">Số lượng đặt mua:</label>
                        <input type="number" class="form-control" id="soluong" name="soluong">
                    </div>
                    <div class="action">
                        <button type="button" class="btn btn-danger" id="btnThemVaoGioHang">Thêm vào giỏ hàng <span class="fa fa-heart"></button>
                        </span>
                    </div>
                </div>

            </div>
        </form>
    </div>