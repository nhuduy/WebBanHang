@{
    ViewBag.Title = "Home Page";
}

<!--Home Slider-->
@Html.Partial("_HomeSlider")
<!--Home Marketing-->
@Html.Partial("_HomeMarketing")

@using WebBanHang.EF;

<div class="container">
    <div class="row">
        @foreach (product sanpham in ViewBag.Danhsachsanpham)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <a href="/php/twig/frontend/sanpham/chitiet?sp_ma=1">
                            @if (String.IsNullOrEmpty(sanpham.image))
                            {
                                <img class="bd-placeholder-img card-img-top" width="100%" height="350" src="~/Content/Images/no-photo.png" />
                            }

                            else
                            {
                                <img class="bd-placeholder-img card-img-top" width="100%" height="350" src="~/UploadedFiles/ProductImages/@sanpham.image" />
                            }

                            <h5>@sanpham.product_name</h5>
                        </a>
                        <h6>Điện thoại</h6>
                        <p class="card-text">@sanpham.description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a class="btn btn-sm btn-outline-secondary" href="/php/twig/frontend/sanpham/chitiet?sp_ma=1">Xem chi tiết</a>
                            </div>
                            <small class="text-muted text-right">
                                <s>@sanpham.reorder_level vnđ</s>
                                <b>@sanpham.list_price vnđ</b>
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</div>

